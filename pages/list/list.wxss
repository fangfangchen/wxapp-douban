/* pages/list/list.js.wxss */

.list-title {
  text-align: center;
  color: #aaa;
  font-size: 18px;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  padding: 30rpx;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-info {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.item-time {
  font-size: 10px;
  color: #aaa;
  margin: 10rpx 0;
}

.item-director {
  font-size: 12px;
  color: #aaa;
}

.item-average {
  margin-right: 20rpx;
  color: red;
  font-weight: bold;
}

.list-item image {
  width: 120rpx;
  height: 120rpx;
}

.loading {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ddd;
  font-size: 24rpx;
}